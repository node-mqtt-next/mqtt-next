{
  "name": "node-mqtt-module",
  "version": "0.0.0",
  "description": "A NodeJS Module to build and implement MQTT Communication for IOT Projects",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vitest --watch --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettify": "prettier --write \"src/**/*.ts\"",
    "verify": "npm run lint:fix && npm run prettify",
    "build": "unbuild",
    "test": "pnpm lint && pnpm test:types && vitest run --coverage",
    "test:types": "tsc --noEmit --skipLibCheck"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "changelogen": "^0.5.5",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "nanoid": "^5.0.4",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run verify"
    }
  }
}